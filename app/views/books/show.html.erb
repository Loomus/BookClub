<h1><%= @book.title %> Show Page</h1>
<section id="review-link">
  <%= link_to "Add a Review", new_book_review_path(@book) %>

</section>
<section>
  <ul>
    <% @book.authors.each do |author| %>
      <li><%= author.name %></li>
      <% end %>
      <li>Page Number: <%= @book.pages %></li>
      <li><img class="img-thumbnail" src="<%= @book.cover_image %>"></li>
  </ul>
</section>
<section id="review_info_<%=@book.id%>">
  <ul>
    <% @book.reviews.each do |review| %>
    <li><%= review.title %></li>
    <li><%= review.rating %></li>
    <li><%= review.description %></li>
    <li><%= link_to review.user.name, user_path(review.user) %></li>
    <% end %>
  </ul>
</section>
<h2>Statistics</h2>
<h3>Top Ratings</h3>
<section id="top_3_reviews_<%=@book.id%>">
  <ul>
    <% @book.top_3_reviews.each do |review| %>
    <li><%= review.title %></li>
    <li><%= review.rating  %></li>
    <li><%= link_to review.user.name, user_path(review.user) %></li>
    <% end %>
  </ul>
</section>
<h4>Lowest Ratings</h4>
<section id="bottom_3_reviews_<%=@book.id%>">
  <ul>
    <% @book.bottom_3_reviews.each do |review| %>
    <li><%= review.title %></li>
    <li><%= review.rating %></li>
    <li><%= link_to review.user.name, user_path(review.user) %></li>
    <% end %>
  </ul>
</section>
<h5>Average Rating for this book:</h5>
<section id="average_rating_<%= @book.id %>">
  <p><%= @book.avg_rating %></p>
</section>
